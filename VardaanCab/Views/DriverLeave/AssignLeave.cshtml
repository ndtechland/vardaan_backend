@model VardaanCab.Domain.DTO.DriverLeaveDTO
@{
    ViewBag.Title = "Assign Leave";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .row {
        margin-top: 1% !important;
    }
</style>

<div style="width:70%">

   

    @if (TempData["msg"] != null)
    {
        <div class="row r">
            <div class="col-md-12">
                <div class="alert alert-info">
                    @TempData["msg"]
                </div>
            </div>
        </div>
    }
    <div class="row">
        <a href="/Admin/SubMenu?menuId=@ViewBag.menuId" class="btn btn-info" style="margin-left:2%">Back</a>


    </div>
    <div class="row r">
        <div class="col-md-12">
            <a href="/DriverLeave/DriverLeaves?menuId=@ViewBag.menuId" class="btn btn-info">All Data</a>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(a=>a.MenuId)
        <div class="row r">
            <div class="col-md-12">
                <h2>Assign Leave</h2>
            </div>
        </div>


        <div class="form-group">
            Driver *   @Html.DropDownListFor(a => a.Driver_Id, Model.Drivers, "Select", new { @class = "form-control", required = "required" })
            <span class="text-danger">
                @Html.ValidationMessageFor(a => a.Driver_Id)
            </span>
        </div>

        <div class="form-group">
            Date From * 
            @Html.TextBoxFor(a=>a.DateFrom,new { @class="form-control dp"})
            <span class="text-danger">
                @Html.ValidationMessageFor(a => a.DateFrom)
            </span>
        </div>

        <div class="form-group">
            Date To *
            @Html.TextBoxFor(a => a.DateTo, new { @class = "form-control dp" })
            <span class="text-danger">
                @Html.ValidationMessageFor(a => a.DateTo)
            </span>
        </div>
        <div class="form-group">
            Leave Description
            @Html.TextAreaFor(a => a.Description, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(a => a.Description)
            </span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-info" value="Submit" />
        </div>
    }
</div>




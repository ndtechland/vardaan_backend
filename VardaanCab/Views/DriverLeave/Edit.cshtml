@model VardaanCab.Domain.DTO.DriverLeaveDTO
@{
    ViewBag.Title = "Update Leave";
    Layout = "~/Views/Shared/Master/_NewAdminLayout.cshtml";
}

<style>
    .row {
        margin-top: 1% !important;
    }
</style>

<div class="container-fluid">
    <div class="row">

        <div class="col-12">
            <div class="row">
                <div class="col-sm-12">
                    <!--driver detail start-->
                    <div class="card">
                        <div class="card-header">
                            <h5>Update Leave</h5>
                        </div>
                        @using (Html.BeginForm())
                        {
                            <div class="card-body">
                                @if (TempData["msg"] != null)
                                {
                                    <div class="row r">
                                        <div class="col-md-12">
                                            <div class="alert alert-info">
                                                @TempData["msg"]
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="row r">
                                    <div class="col-md-12">
                                        <a href="/DriverLeave/DriverLeaves?menuId=@Model.MenuId" class="btn btn-primary">Back</a>
                                    </div>
                                </div>


                                @Html.HiddenFor(a => a.Id)
                                @Html.HiddenFor(a => a.CreateDate)
                                @Html.HiddenFor(a => a.MenuId)



                                <div class="form-group">
                                    Driver <span class="text-danger">*</span>   @Html.DropDownListFor(a => a.Driver_Id, Model.Drivers, "Select", new { @class = "form-control", required = "required" })
                                    <span class="text-danger">
                                        @Html.ValidationMessageFor(a => a.Driver_Id)
                                    </span>
                                </div>

                                <div class="form-group">
                                    Date From <span class="text-danger">*</span>
                                    @Html.TextBoxFor(a => a.DateFrom, new { @class = "form-control sdp" })
                                    <span class="text-danger">
                                        @Html.ValidationMessageFor(a => a.DateFrom)
                                    </span>
                                </div>

                                <div class="form-group">
                                    Date To <span class="text-danger">*</span>
                                    @Html.TextBoxFor(a => a.DateTo, new { @class = "form-control sdp" })
                                    <span class="text-danger">
                                        @Html.ValidationMessageFor(a => a.DateTo)
                                    </span>
                                </div>
                                <div class="form-group">
                                    Leave Description
                                    @Html.TextAreaFor(a => a.Description, new { @class = "form-control" })
                                    <span class="text-danger">
                                        @Html.ValidationMessageFor(a => a.Description)
                                    </span>
                                </div> 
                                
                            </div>
                            <div class="card-footer text-end">
                                <input type="submit" class="btn btn-primary me-3" value="Submit" />
                            </div>
                        }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


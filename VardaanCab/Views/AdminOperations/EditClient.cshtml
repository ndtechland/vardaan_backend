@model VardaanCab.Models.DTO.ClientUserDTO
@{
    ViewBag.Title = "Update Client User ";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .row {
        margin-top: 1% !important;
    }
</style>

@if (TempData["msg"] != null)
{
    <div class="row r">
        <div class="col-md-12">
            <div class="alert alert-info">
                @TempData["msg"]
            </div>
        </div>
    </div>
}
@using (Html.BeginForm())
{

<div style="width:50%">

    <div class="row r">
        <div class="col-md-12">
            <a href="/AdminOperations/ClientAll" class="btn btn-info">Show all</a>
        </div>
    </div>

    <div class="row r">
        <div class="col-md-12">
            <h2>Update User</h2>
        </div>
    </div>

    @Html.HiddenFor(a => a.Id)

    @Html.HiddenFor(a => a.Role)
    @Html.HiddenFor(a => a.MenuId)
    @Html.HiddenFor(a => a.IsActive)

    <div class="row r">
        <div class="col-md-12">
            <div class="form-group">
                Company Name
                @Html.DropDownListFor(a => a.Customer_Id, new SelectList(ViewBag.customerlist, "Id", "CustomerNameWithCity"), "Select", new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.Customer_Id)
                </span>
            </div>

            <div class="form-group">
                Client Name *
                @Html.TextBoxFor(a => a.ClientName, new { @class = "form-control", @style = "text-transform:uppercase" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.ClientName)
                </span>
            </div>
            <div class="form-group">
                Phone Number *
                @Html.TextBoxFor(a => a.MobileNumber, new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.MobileNumber)
                </span>
            </div>
            <div class="form-group">
                Email Id *
                @Html.TextBoxFor(a => a.Email, new { @class = "form-control", required = "required" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.Email)
                </span>
            </div>


            <div class="form-group">
                Password *
                @Html.TextBoxFor(a => a.Password, new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.Password)
                </span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-info" value="Save" />
            </div>

        </div>
    </div>

</div>

}
@model VardaanCab.Domain.DTO.VehicleModelDTO
@{
    ViewBag.Title = "Update Cab Categories";
    Layout = "~/Views/Shared/New_Master/_FinelAdminLayout.cshtml";
}

<div class="pcoded-content">

    <!-- Page-header end -->
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="card bread">
                    <div class="card-body">
                        <h5>Update Vehicle Model</h5>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Master Enteries</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Manage Vehicle Model</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>Update Vehicle Model</h5>


                                    <div class="d-flex align-items-center">
                                        <a href="/VehicleModel/All" class="btn btn-primary btn-sm">
                                            Show All
                                        </a>
                                    </div>
                                </div>
                                <div class="card-block">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.HiddenFor(a => a.Id)
                                        @Html.HiddenFor(a => a.MenuId)
                                        if (TempData["msg"] != null)
                                        {
                                            <div class="mb-3">
                                                <div class="alert alert-success border-success">
                                                    @TempData["msg"]
                                                </div>
                                            </div>
                                        }

                                        <div class="row r">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    Manufacture Name <span class="text-danger">*</span>
                                                    @Html.TextBoxFor(a => a.ManufactureName, new { @class = "form-control", required = "required" })
                                                    <span class="text-danger">
                                                        @Html.ValidationMessageFor(a => a.ManufactureName)
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    Model Name <span class="text-danger">*</span>
                                                    @Html.TextBoxFor(a => a.ModelName, new { @class = "form-control", required = "required" })
                                                    <span class="text-danger">
                                                        @Html.ValidationMessageFor(a => a.ModelName)
                                                    </span>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="card-footer text-end">
                                            <input type="submit" class="btn btn-primary me-3" value="Save" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- Page body end -->
            </div>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    <div style="width:50%">

        <div class="row r">
            <div class="col-md-12">
                <a class="btn btn-info" href="/VehicleModel/All?menuId=@Model.MenuId">Show all</a>
            </div>
        </div>

        <div class="row r">
            <div class="col-md-12">
                <h2>Update Vehicle Model</h2>
            </div>
        </div>

        @if (TempData["msg"] != null)
        {
            <div class="row r">
                <div class="col-md-12">
                    <div class="alert alert-info">
                        @TempData["msg"]
                    </div>
                </div>
            </div>
        }
        @Html.HiddenFor(a => a.Id)
        @Html.HiddenFor(a=>a.MenuId)
        <div class="row r">
            <div class="col-md-12">
                <div class="form-group">
                    Manufacture Name *
                    @Html.TextBoxFor(a => a.ManufactureName, new { @class = "form-control", required = "required" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(a => a.ManufactureName)
                    </span>
                </div>
                <div class="form-group">
                    Model Name *
                    @Html.TextBoxFor(a => a.ModelName, new { @class = "form-control", required = "required" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(a => a.ModelName)
                    </span>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Save" />
                </div>

            </div>
        </div>

    </div>

}
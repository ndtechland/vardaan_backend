@model VardaanCab.Models.DTO.VehicleModelDTO
@{
    ViewBag.Title = "Add Cab Category";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .row{
        margin-top:1% !important;
    }
</style>


@using (Html.BeginForm())
{
    <input name="MenuId" type="hidden" value="@ViewBag.menuId" />
<div style="width:50%">

    <div class="row r">
        <div class="col-md-12">
            <a href="/Admin/SubMenu?menuId=@ViewBag.menuId" class="btn btn-info" style="margin-left:2%">Back</a>
              @*<a href="/VehicleModel/All" class="btn btn-info">Show all</a>*@
        </div>
    </div>

    <div class="row r">
        <div class="col-md-12">
            <h2>Add Vehicle Model</h2>
        </div>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="row r">
            <div class="col-md-12">
                <div class="alert alert-info">
                    @TempData["msg"]
                </div>
            </div>
        </div>
    }

    <div class="row r">
        <div class="col-md-12">
            <div class="form-group">
                 Manufacture Name *
                @Html.TextBoxFor(a => a.ManufactureName, new { @class = "form-control", required = "required" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.ManufactureName)
                </span>
            </div>
            <div class="form-group">
                Model Name *
                @Html.TextBoxFor(a => a.ModelName, new { @class = "form-control", required = "required" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.ModelName)
                </span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-info" value="Save" />
            </div>

        </div>
    </div>

</div>

}
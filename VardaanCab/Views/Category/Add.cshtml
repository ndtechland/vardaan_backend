@model VardaanCab.Domain.DTO.CategoryDTO
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .row{
        margin-top:1% !important;
    }
</style>


@using (Html.BeginForm())
{
<div style="width:50%">

    <div class="row r">
        <div class="col-md-12">
           <a href="/Category/All" class="btn btn-info">Show all</a>
        </div>
    </div>

    <div class="row r">
        <div class="col-md-12">
            <h2>Add Category</h2>
        </div>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="row r">
            <div class="col-md-12">
                <div class="alert alert-info">
                    @TempData["msg"]
                </div>
            </div>
        </div>
    }

    <div class="row r">
        <div class="col-md-12">
            <div class="form-group">
                Category Name *
                @Html.TextBoxFor(a => a.CategoryName, new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.CategoryName)
                </span>
            </div>

            <div class="form-group">
                Parent Category *
               @Html.DropDownListFor(a => a.ParentCategory_Id, Model.Categories,"Select", new { @class = "form-control"})
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.ParentCategory_Id)
                </span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-info" value="Save" />
            </div>

        </div>
    </div>

</div>

}
                                                @Html.ValidationMessageFor(a => a.VehicleModel_Id)
                                            </span>
                                        </div>
                                        <div class="col-md-6">
                                            Vehicle Company Name *
                                            @Html.TextBoxFor(a => a.Company, new { @class = "form-control" })

                                    @*<div class="row r">
                    <div class="col-md-12">
                        <h2>Add Cab</h2>
                    </div>
                </div>*@

                                    @if (TempData["msg"] != null)
                                    {
                                        <div class="row r">
                                            <div class="col-md-12">
                                                <div class="alert alert-info">
                                                    @TempData["msg"]
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <div class="row r">
                                        <div class="col-md-6">

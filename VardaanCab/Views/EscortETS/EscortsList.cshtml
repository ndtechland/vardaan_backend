@model VardaanCab.Domain.DTO.EscortDTO
@{
    ViewBag.Title = "EscortsList";
    Layout = "~/Views/Shared/New_Master/_FinelAdminLayout.cshtml";
    int Count = 1;
}

<div class="pcoded-content">
    
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="card bread">
                    <div class="card-body">
                        <h5>Escort List</h5>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">ETS</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Add Escort</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>Escort List</h5>

                                    <!-- Import and Export Section -->
                                    <div class="d-flex align-items-center">
                                        <!-- Export Section -->
                                        <a href="/EscortETS/ExportToExcel" class="pull-right"><img src="https://www.pinclipart.com/picdir/big/178-1780962_download-105-free-excel-icons-here-excel-download.png" alt="List View" style="width: 55px; margin-left:450px;"></a>


                                        <!-- Import Form -->
                                        <a href="/EscortETS/Escort?menuId=@ViewBag.menuId" class="btn btn-primary btn-sm">
                                            <i class="fa fa-plus-square"></i>Add New
                                        </a>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-table" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th nowrap>Sr No.</th>
                                                    <th nowrap>Escort EmployeeId</th>
                                                    <th nowrap>Escort Name</th>
                                                    <th nowrap>Escort Fathe Name</th>
                                                    <th nowrap>Mobile Number</th>
                                                    <th nowrap>Aadhar Number</th>
                                                    <th nowrap>DOB</th>
                                                    <th nowrap>Company Name</th>
                                                    <th nowrap>Vendor Name</th>
                                                    <th nowrap>Pincode</th>
                                                    <th nowrap>Permanent Address</th>
                                                    <th nowrap>Escort Address</th>
                                                    <th nowrap>Created Date</th>
                                                    <th>Edit</th>
                                                    <th>Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.EscortList)
                                                {
                                                    <tr>
                                                        <td nowrap>@Count</td>
                                                        <td>@item.EscortEmployeeId</td>
                                                        <td>@item.EscortName</td>
                                                        <td>@item.EscortFatheName</td>
                                                        <td>@item.EscortMobileNumber</td>
                                                        <td>@item.EscortAadhaarNumber</td>
                                                        <td>@item.DOB</td>
                                                        <td>@item.CompanyName</td>
                                                        <td>@item.VendorName</td>
                                                        <td>@item.Pincode</td>
                                                        <td>@item.PermanentAddress</td>
                                                        <td>@item.EscortAddress</td>
                                                        <td>@item.CreatedDate</td>
                                                        <td>
                                                            <a href="/EscortETS/Escort?Id=@item.Id"  class="tabledit-edit-button btn btn-primary waves-effect waves-light">
                                                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a href="/EscortETS/DeleteEscort?Id=@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="tabledit-delete-button btn btn-danger waves-effect waves-light">
                                                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    Count++;
                                                }
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</div>
 


                                                    @Html.ValidationMessageFor(a => a.CompanyId)
                                                </span>
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label-title">Role Name</label>
                                                @Html.TextBoxFor(a => a.OrgName, new { @class = "form-control", placeholder = "Role Name", required = "required" })

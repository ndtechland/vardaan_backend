                                                            <div class="actions">
                                                                <label>
                                                                    <input type="checkbox" class="read-checkbox" />
                                                                    Read
                                                                </label>
                                                                <label>
                                                                    <input type="checkbox" class="write-checkbox" onclick="syncReadCheckbox(this);" />
                                                                    Write
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="sub-option-row">
                                                            <span>Female Live Tracking</span>
                                                            <div class="actions">
                                                                <label>
                                                                    <input type="checkbox" class="read-checkbox" />
                                                                    Read
                                                                </label>
                                                                <label>
                                                                    <input type="checkbox" class="write-checkbox" onclick="syncReadCheckbox(this);" />
                                                                    Write
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer text-end">
                                <button type="submit" class="btn btn-primary">@ViewBag.BtnTXT</button>
                                <button type="reset" class="btn btn-outline-primary">Reset</button>
                            </div>
                        </form>



                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


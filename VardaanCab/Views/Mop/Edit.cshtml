@model VardaanCab.Domain.DTO.MopMasterDTO
@{
    ViewBag.Title = "Update Mode Of Payment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .row {
        margin-top: 1% !important;
    }
</style>


@using (Html.BeginForm())
{
    <div style="width:50%">

        <div class="row r">
            <div class="col-md-12">
                <a href="/Mop/All" class="btn btn-info">Show all</a>
            </div>
        </div>

        <div class="row r">
            <div class="col-md-12">
                <h2>Update Mode Of Payment</h2>
            </div>
        </div>

        @if (TempData["msg"] != null)
        {
            <div class="row r">
                <div class="col-md-12">
                    <div class="alert alert-info">
                        @TempData["msg"]
                    </div>
                </div>
            </div>
        }
        @Html.HiddenFor(a=>a.Id)
        <div class="row r">
            <div class="col-md-12">
                <div class="form-group">
                    Mop Name *
                    @Html.TextBoxFor(a => a.Mop, new { @class = "form-control" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(a => a.Mop)
                    </span>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Save" />
                </div>

            </div>
        </div>

    </div>

}
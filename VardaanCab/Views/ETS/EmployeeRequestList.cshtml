@model VardaanCab.Domain.DTO.CreateRequestDTO
@{
    ViewBag.Title = "EmployeeRequestList";
    Layout = "~/Views/Shared/New_Master/_FinelAdminLayout.cshtml";
    int Count = 1;
}
<div class="pcoded-content">

    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="card">
                    <div class="card-block">
                        <h5>Employee Request List</h5>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">ETS</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Show Requests</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>Employee Request List</h5>

                                    <!-- Import and Export Section -->
                                    <div class="d-flex align-items-center">


                                        <a href="/ETS/Routing" class="btn btn-primary btn-sm">
                                            <i class="fa fa-plus-square"></i>Routing
                                        </a>
                                        &nbsp;
                                        &nbsp;
                                        <a href="/ETS/CreateRequest?menuId=@ViewBag.menuId" class="btn btn-primary btn-sm">
                                            <i class="fa fa-plus-square"></i>Add New
                                        </a>
                                    </div>
                                </div>
                                @if (TempData["dltmsg"] != null)
                                {
                                    <div class="row r">
                                        <div class="col-md-12">
                                            <div class="alert alert-success border-success">
                                                @TempData["dltmsg"]
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-table" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th nowrap>Sr No.</th>
                                                    <th nowrap>Employee ID</th>
                                                    <th nowrap>Request Type</th>
                                                    <th nowrap>Company (Org Name)</th>
                                                    @*<th nowrap>First Name</th>
                            <th nowrap>Last Name</th>
                            <th nowrap>Gender</th>
                            <th nowrap>Email</th>
                            <th nowrap>Guest Contact</th>*@
                                                    <th nowrap>Unit</th>
                                                    <th nowrap>Department</th>
                                                    <th nowrap>Cost Centre</th>
                                                    <th nowrap>Expense Code</th>
                                                    <th nowrap>Requestor Emp ID</th>
                                                    <th nowrap>Requestor Name</th>
                                                    <th nowrap>Requestor Contacts</th>
                                                    <th nowrap>Booking Received Date</th>
                                                    <th nowrap>Request Trip Type</th>
                                                    <th nowrap>Destination Request Method</th>
                                                    <th nowrap>Location Type</th>
                                                    <th nowrap>Start Request Date</th>
                                                    <th nowrap>End Request Date</th>
                                                    <th nowrap>Trip Type</th>
                                                    <th nowrap>Shift Type</th>
                                                    <th nowrap>SMS Triggered Location</th>
                                                    <th nowrap>Created Date</th>
                                                    <th>Edit</th>
                                                    <th>Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.EmployeeRequestList)
                                                {
                                                    <tr>
                                                        <td nowrap>@Count</td>
                                                        <td><a href="/Employee/Add?id=@item.Employee_Id">@item.EmployeeId</a> </td>
                                                        <td>@item.RequestType</td>
                                                        <td>@item.CompanyName (@item.OrgName)</td>
                                                        @*<td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Gender</td>
                                <td>@item.Email</td>
                                <td>@item.GuestContact</td>*@
                                                        <td>@item.Unit</td>
                                                        <td>@item.Department</td>
                                                        <td>@item.CostCentre</td>
                                                        <td>@item.ExpenseCode</td>
                                                        <td>@item.RequestorEmpId</td>
                                                        <td>@item.RequestorName</td>
                                                        <td>@item.RequestorContacts</td>
                                                        <td>@item.BookingReceivedDate</td>
                                                        <td>@item.RequestTripType</td>
                                                        <td>@item.DestinationRequestMethod</td>
                                                        <td>@item.LocationType</td>
                                                        <td>@item.StartRequestDate</td>
                                                        <td>@item.EndRequestDate</td>
                                                        <td>@item.TripType</td>
                                                        <td>@item.ShiftType</td>
                                                        <td>@item.SMSTriggeredLocation</td>
                                                        <td>@item.CreatedDate</td>
                                                        <td>
                                                            <a href="/ETS/CreateRequest?Id=@item.Id" class="tabledit-edit-button btn btn-primary waves-effect waves-light">
                                                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a href="/ETS/DeleteEmployeeRequest?Id=@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="tabledit-delete-button btn btn-danger waves-effect waves-light">
                                                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    Count++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</div>



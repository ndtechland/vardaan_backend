@model VardaanCab.Domain.DTO.AvailableDriverDTO
@{
    ViewBag.Title = "AvailableDrivers";
    Layout = "~/Views/Shared/New_Master/_FinelAdminLayout.cshtml";
    int count = 1;
}

<div class="pcoded-content">

    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="card">
                    <div class="card-header">
                        <h5>Available Drivers List</h5>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">ETS</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Available Drivers</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>Available Drivers List</h5>
 
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-table" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>Sr No.</th>
                                                    <th>CheckinId</th>
                                                    <th>Vendor Name</th>
                                                    <th>Driver Number</th>
                                                    <th>Driver Name</th>
                                                    <th>Driver Id</th>
                                                    <th>Vehicle Number</th>
                                                    <th>Vehicle Type</th>
                                                    <th>Capacity</th>
                                                    <th>Vehicle Make</th>
                                                    <th>Company Name</th>
                                                    <th>Status</th>
                                                    <th>Checkout</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.AvailableDrivers)
                                                {
                                                    <tr>
                                                        <td>@count</td>
                                                        <td>@item.CheckinId</td>
                                                        <td>@item.VendorName</td>
                                                        <td>@item.MobileNumber</td>
                                                        <td>@item.DriverName</td>
                                                        <td>@item.DriverId</td>
                                                        <td>@item.VehicleNumber</td>
                                                        <td>@item.VehicleType</td>
                                                        <td>@item.Capacity</td>
                                                        <td>@item.VehicleMake</td>
                                                        <td>@item.CompanyName</td>
                                                        <td>@item.Status</td>
                                                        <td>
                                                            <a href="#" class="btn btn-success" data-toggle="modal" data-target="#remark-Modal">Checkout</a>
                                                        </td>
                                                        
                                                    </tr>
                                                    count++;
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="remark-Modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Remarks</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h6>Add Remarks</h6>
                <textarea id="remarkText" class="form-control" rows="3" placeholder="Enter your remark here..."></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary waves-effect waves-light ">Add Remarks</button>

            </div>
        </div>
    </div>
</div>
                                                                                                <button class="btn btn-default">
                                                                                                    <i class="icon-calendar calInputIcon"></i>
                                                                                                </button>
                                                                                            </span>
                                                                                        </div>
                                                                                    </div>
                                                                                    <input class="col-md-12 col-xs-12 btn btn-success btn-xs showCustomReportButton" type="button" value="Show Report" disabled="disabled">
                                                                                    <input class="col-md-12 col-xs-12 btn btn-warning btn-xs showCustomReportButton" type="button" value="In-valid Date Range">
                                                                                </form>
                                                                            </li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            @*<div class="col-md-4">
                                                    <input type="text" class="form-control" id="calendarInput">
                                                </div>*@

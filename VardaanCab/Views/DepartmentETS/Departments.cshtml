@model VardaanCab.Domain.DTO.DepartmentMasterDTO
@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/New_Master/_FinelAdminLayout.cshtml";
    int Count = 1;
}
<div class="pcoded-content">
    <!-- Page-header end -->
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="card bread">
                    <div class="card-body">
                        <h5>@ViewBag.Heading</h5>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Master Enteries</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Add Department</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>@ViewBag.Heading</h5>
                                </div>

                                <div class="card-block">
                                    <form class="theme-form mega-form" action="Departments" method="post" enctype="multipart/form-data">
                                        <input name="MenuId" type="hidden" value="@ViewBag.menuId" />
                                        <input name="Id" type="hidden" value="@Model.Id" />
                                        @if (TempData["msg"] != null)
                                        {
                                            <div class="row r">
                                                <div class="col-md-12">
                                                    <div class="alert alert-success border-success">
                                                        @TempData["msg"]
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        <div class="mb-3">
                                            <div class="row">
                                                <div class="col-6">
                                                    <label for="hotel-category" class="form-label-title ">
                                                        Company<span class="text-danger">*</span>
                                                    </label>
                                                    @Html.DropDownListFor(a => a.CompanyId, Model.Companies, "--Select Company--", new { @class = "form-control", @required = "" })
                                                    <span class="text-danger">
                                                        @Html.ValidationMessageFor(a => a.CompanyId)
                                                    </span>
                                                </div>
                                                <div class="col-6">
                                                    <label class="form-label-title ">Department Name<span class="text-danger">*</span></label>
                                                    @Html.TextBoxFor(a => a.DepartmentName, new { @class = "form-control", placeholder = "Department Name", @required = "" })
                                                    <span class="text-danger">
                                                        @Html.ValidationMessageFor(a => a.DepartmentName)
                                                    </span>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="card-footer text-end">
                                            <button type="submit" class="btn btn-primary me-3">@ViewBag.BtnTXT</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- Page body end -->
            </div>
        </div>
    </div>
</div>
 

<!-- Get Department List-->
<div class="pcoded-content">

    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">

                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>Department List</h5>
                                </div>
                                <div class="card-block">
                                    @if (TempData["dltmsg"] != null)
                                    {
                                        <div class="row r">
                                            <div class="col-md-12">
                                                <div class="alert alert-success border-success">
                                                    @TempData["dltmsg"]
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-table" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th nowrap>Sr No.</th>
                                                    <th>Company Name</th>
                                                    <th>Department Name</th>
                                                    <th>Edit</th>
                                                    <th>Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.DepartmentMasterList != null)
                                                {
                                                    foreach (var item in Model.DepartmentMasterList)
                                                    {
                                                        <tr>
                                                            <td nowrap>@Count</td>
                                                            <td>@item.CompanyName</td>
                                                            <td>@item.DepartmentName</td>
                                                            <td>
                                                                <a href="/DepartmentETS/Departments?Id=@item.Id" class="tabledit-edit-button btn btn-primary waves-effect waves-light">
                                                                    <i class="fa fa-pencil-square-o"
                                                                       aria-hidden="true"></i>
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <a href="/DepartmentETS/DeleteDepartment?Id=@item.Id" onclick="return confirm('Are you sure want to delete?')" class="tabledit-delete-button btn btn-danger waves-effect waves-light">
                                                                    <i class="fa fa-trash-o"
                                                                       aria-hidden="true"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                        Count++;
                                                    }
                                                }


                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</div>
 


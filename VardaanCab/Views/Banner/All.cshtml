@model IEnumerable<VardaanCab.DataAccessLayer.DataLayer.BannerMaster>
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/New_Master/_FinelAdminLayout.cshtml";
    int count = 1;
}
<div class="pcoded-content">

    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="card">
                    <div class="card-block">
                        <h5>Banner List</h5>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">ETS Master Enteries</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Add Banner</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>Banner List</h5>

                                    <!-- Import and Export Section -->
                                    <div class="d-flex align-items-center">
                                        
                                        
                                        <a href="/Employee/Add?menuId=@ViewBag.menuId" class="btn btn-primary btn-sm">
                                            <i class="fa fa-plus-square"></i>Add New
                                        </a>
                                    </div>
                                </div>
                                <div class="card-block">
                                    @if (TempData["dltmsg"] != null)
                                    {
                                        <div class="row r">
                                            <div class="col-md-12">
                                                <div class="alert alert-success border-success">
                                                    @TempData["dltmsg"]
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-table" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>Sr No.</th>
                                                    <th>Image</th>
                                                    <th>Role</th>
                                                    <th>Created Date</th>
                                                    <th>Edit</th>
                                                    <th>Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@count</td>
                                                        <td>
                                                            <span>
                                                                <a href="/images/@item.BannerImage">
                                                                    <img src="~/images/@item.BannerImage"
                                                                         alt="users">
                                                                </a>
                                                            </span>
                                                        </td>
                                                        <td>@item.Role</td>
                                                        <td>@item.CreatedDate</td>
                                                        <td>
                                                            <a href="/Banner/Add?Id=@item.Id" class="tabledit-edit-button btn btn-primary waves-effect waves-light">
                                                                <i class="fa fa-pencil-square-o"
                                                                   aria-hidden="true"></i>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a href="/Banner/DeleteBanner?Id=@item.Id" onclick="return confirm('Are you sure want to delete?')" class="tabledit-delete-button btn btn-danger waves-effect waves-light">
                                                                <i class="fa fa-trash-o"
                                                                   aria-hidden="true"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    count++;
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</div>



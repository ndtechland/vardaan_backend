@model VardaanCab.Domain.ViewModels.CabListVm
@{
    ViewBag.Title = "Available Cabs";
    //Layout = "~/Views/Shared/AdminLayout.cshtml";
    Layout = "~/Views/Shared/New_Master/_FinelAdminLayout.cshtml";

    var links = new VardaanCab.Repository.CommonRepository().GetNonMenuLinks();
    int count = Model.SrNo;
}
<link href="~/css/fixtable.css" rel="stylesheet" />


<div class="pcoded-content">

    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="card bread">
                    <div class="card-body">
                        <h5>
                            @ViewBag.Title
                        </h5>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Cab Booking</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        Available Cabs
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>
                                        @ViewBag.Title
                                    </h5>

                                    <!-- Import and Export Section -->
                                    <div class="d-flex align-items-center">
                                        <a class="btn btn-info" href="/Booking/AvailableCabs?menuId=@ViewBag.menuId">Show all</a>

                                    </div>
                                </div>
                                <div class="card-block">
                                    @using (Html.BeginForm())
                                    {
                                        <input name="menuId" value="@ViewBag.menuId" type="hidden" />
                                        <div class="row r">
                                            <div class="col-md-6">
                                                <input type="text" placeholder="Search by model/vehicle no" class="form-control" name="term" />
                                            </div>
                                            <div class="col-md-3">
                                                <input type="submit" class="btn btn-info" value="Find" />

                                            </div>
                                        </div>
                                    }
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-table" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>SNo.</th>
                                                    <th>Vehicle Model</th>
                                                    <th>Vehicle Number</th>
                                                    <th>Vendor</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Cabs)
                                                {
                                                    <tr>
                                                        <td>@(++count)</td>
                                                        <td>@item.ModelName</td>
                                                        <td>@item.VehicleNumber</td>
                                                        <td>@item.VendorName</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</div>

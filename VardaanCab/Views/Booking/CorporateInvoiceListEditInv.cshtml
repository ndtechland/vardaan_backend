        function getForatedDate(datevalue) {
           
            var MyDate_String_Value = datevalue;//"/Date(1224043200000)/"
            var value = new Date
                (
                    parseInt(MyDate_String_Value.replace(/(^.*\()|([+-].*$)/g, ''))
                );
            var dat = value.getMonth() +
                1 +
                "/" +
                value.getDate() +
                "/" +
                value.getFullYear();
            return dat;
        }

       

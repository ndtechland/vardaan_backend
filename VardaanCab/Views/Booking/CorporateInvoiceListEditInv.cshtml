            }
            else
            {
                $(".chkId").removeAttr("checked");
            }
        })

        $("#chkAll,.chkId").click(function(){
            displaySaveBill();
        })


        function displaySaveBill()
        {
            var isChecked=false;
            $(".chkId").each(function(){
                if ($(this).prop('checked')==true)
                {
                    isChecked=true;
                }
            })

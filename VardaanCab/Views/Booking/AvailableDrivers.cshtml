@model VardaanCab.Models.ViewModels.DriverListVm
@{
    ViewBag.Title = "Available Drivers";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int count = Model.SrNo;
}
<link href="~/css/fixtable.css" rel="stylesheet" />
<style>
    #main {
        margin: auto;
        width: 99%;
    }
</style>

<div id="main">
    <h2>@ViewBag.Title</h2>
    <div class="row">
        <a href="/Admin/SubMenu?menuId=@ViewBag.menuId" class="btn btn-info" style="margin-left:2%">Back</a>
    </div>
    @using (Html.BeginForm())
    {
        <input type="hidden" name="menuId" value="@ViewBag.menuId" />
        <div class="row r">
            <div class="col-md-4">
                <input type="text" placeholder="Search by Name/MobileNo" class="form-control" name="term" />
            </div>
            <div class="col-md-8">
                <input type="submit" class="btn btn-info" value="Find" />
                <a class="btn btn-info" href="/Booking/AvailableDrivers?menuId=@ViewBag.menuId">Show all</a>
            </div>
        </div>
    }


    <div class="mainDiv">
        <div class="wrapperTable table-scroll" >
            <table class="table">
                <thead>
                    <tr>
                        <th>SNo.</th>
                        <th>Name</th>
                        <th>Contact No</th>
                        <th>Alter No.</th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Drivers)
                    {
                        <tr>
                            <td>@(++count)</td>
                            <td>@item.DriverName</td>
                            <td>@item.MobileNumber</td>
                            <td>@item.AlternateNo1 &nbsp;&nbsp; @item.AlternateNo2</td>
                            <td>
                                Local Address : @item.LocalAddress <br />
                                Permanent Address: @item.PermanentAddress
                            </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row r r">
        <div class="col-md-12">
            <ul class="pagination">
                @for (int i = 1; i <= Model.NumberOfPages; i++)
                {
                    <li class="@if (i == Model.Page) {<text>active</text> }">
                        <a href="/Booking/AvailableDrivers?term=@Model.Term&page=@i&menuId=@ViewBag.menuId">@i</a>
                    </li>
                }
            </ul>
        </div>
    </div>

</div>




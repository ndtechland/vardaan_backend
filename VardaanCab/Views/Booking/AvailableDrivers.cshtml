@model VardaanCab.Domain.ViewModels.DriverListVm
@{
    ViewBag.Title = "Available Drivers";
    //Layout = "~/Views/Shared/AdminLayout.cshtml";
    Layout = "~/Views/Shared/New_Master/_FinelAdminLayout.cshtml";
    int count = Model.SrNo;
}
<link href="~/css/fixtable.css" rel="stylesheet" />
<div class="pcoded-content">

    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="card bread">
                    <div class="card-body">
                        <h5>
                            @ViewBag.Title
                        </h5>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Cab Booking</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        Available Cabs
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>
                                        @ViewBag.Title
                                    </h5>

                                </div>
                                <div class="card-block">
                                    @using (Html.BeginForm())
                                    {
                                        <input type="hidden" name="menuId" value="@ViewBag.menuId" />
                                        <div class="row r">
                                            <div class="col-md-5">
                                                <input type="text" placeholder="Search by Name/MobileNo" class="form-control" name="term" />
                                            </div>
                                            <div class="col-md-7">
                                                <input type="submit" class="btn btn-info" value="Find" />
                                                <a class="btn btn-info" href="/Booking/AvailableDrivers?menuId=@ViewBag.menuId">Show all</a>
                                            </div>
                                        </div>
                                    }
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-table" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>SNo.</th>
                                                    <th>Name</th>
                                                    <th>Contact No</th>
                                                    <th>Alter No.</th>
                                                    <th>Address</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Drivers)
                                                {
                                                    <tr>
                                                        <td>@(++count)</td>
                                                        <td>@item.DriverName</td>
                                                        <td>@item.MobileNumber</td>
                                                        <td>@item.AlternateNo1 &nbsp;&nbsp; @item.AlternateNo2</td>
                                                        <td>
                                                            Local Address : @item.LocalAddress <br />
                                                            Permanent Address: @item.PermanentAddress
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</div>
 

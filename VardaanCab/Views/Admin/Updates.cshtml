@model IEnumerable<VardaanCab.Domain.DTO.LogsDTO>
@{
    ViewBag.Title = "Recent Updates";
    Layout = "~/Views/Shared/New_Master/_FinelAdminLayout.cshtml";
}
<link href="~/css/fixtable.css" rel="stylesheet" />

<div class="pcoded-content">

    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="card bread">
                    <div class="card-body">
                        <h5>
                            Recent Updates
                        </h5>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Update</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        Recent Updates
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>
                                        Recent Updates
                                    </h5>

                                    <!-- Import and Export Section -->
                                    <div class="d-flex align-items-center">

                                        @*<a class="btn btn-info" href="/Admin/LoginHistory?menuId=@ViewBag.menuId">Show all</a>*@

                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-table" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Update</th>
                                                    <th>Updated By</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.UpdateDate.ToString("dd-MMM-yyyy") @item.UpdateDate.ToShortTimeString()</td>
                                                        <td>@item.Description</td>
                                                        <td>@item.UpdatedBy</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</div>
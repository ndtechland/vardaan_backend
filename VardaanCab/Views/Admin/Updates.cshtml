@model IEnumerable<VardaanCab.Domain.DTO.LogsDTO>
@{
    ViewBag.Title = "Recent Updates";
    Layout = "~/Views/Shared/Master/_NewAdminLayout.cshtml";
}
<link href="~/css/fixtable.css" rel="stylesheet" />
<style>
    #main {
        margin: auto;
        width: 100%;
    }
</style>

<div class="container-fluid">
    <div class="row">

        <div class="col-12">
            <div class="row">
                <div class="col-sm-12">
                    <!--driver detail start-->
                    <div class="card">
                        <div class="card-header  card-header--2">

                            <div>
                                <h5>Recent Updates</h5>
                            </div>
                             

                        </div>
                        <div class="card-body">
                             

                            <div class="mainDiv">
                                <div class="table-responsive table-desi scrollable">
                                    <table class="user-table table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Update</th>
                                                <th>Updated By</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.UpdateDate.ToString("dd-MMM-yyyy") @item.UpdateDate.ToShortTimeString()</td>
                                                    <td>@item.Description</td>
                                                    <td>@item.UpdatedBy</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>







@model IEnumerable<VardaanCab.Models.Domain.SoftwareLink>
@{
    Layout = null;
    int menuId = ViewBag.menuId;
}

<link href="/css/component.css" rel="stylesheet" />
<link href="/css/style_grid.css" rel="stylesheet" />
<link href="/css/font-awesome.css" rel="stylesheet">
<!DOCTYPE html>
<head>
    <style>
        .containerDiv {
            width: 100%;
            /*height:650px;
        margin: auto;
        border:1px solid;*/
        }

        .btnBack {
            background-color: #008CBA; /* Blue */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            width: 10%;
        }
    </style>
</head>
<body>

    <div class="containerDiv">
        <a href="/Admin/Dashboard" class="btnBack">Back</a>
        @if (Session["uEmail"] == null)
        {
            Response.Redirect("/Admin/Login");
        }
        else
        {
            <div class="col-sm-4"><h3>Welcome : @Session["uEmail"].ToString()</h3></div>
        }
            <div class="agile_top_w3_grids">
                <ul class="ca-menu">
                    @foreach (var item in Model)
                    {
                        <li>
                            @if (item.Url.Contains("?"))
                            {
                                <a href="@item.Url&menuId=@menuId">
                                    <i class="fa fa-list" aria-hidden="true"></i>
                                    <div class="ca-content">
                                        <h3 class="ca-sub one">
                                            @item.Title
                                            @if (item.Counts > -1)
                                            {
                                                <span>(@item.Counts)</span>
                                            }
                                        </h3>
                                    </div>
                                </a>
                            }
                            else
                            {
                                <a href="@item.Url?&menuId=@menuId">
                                    <i class="fa fa-list" aria-hidden="true"></i>
                                    <div class="ca-content">
                                        <h3 class="ca-sub one">
                                            @item.Title
                                            @if (item.Counts > -1)
                                            {
                                                <span>(@item.Counts)</span>
                                            }
                                        </h3>
                                    </div>
                                </a>
                            }
                        </li>
                    }
                    <div class="clearfix"></div>
                </ul>
            </div>
        </div>

</body>







@model VardaanCab.Models.DTO.StateMasterDTO
@{
    ViewBag.Title = "Add State";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .row{
        margin-top:1% !important;
    }
</style>


@using (Html.BeginForm())
{
    <input type="hidden" name="MenuId" value="@ViewBag.menuId"/>
<div style="width:50%">

    <div class="row r">
        <div class="col-md-12">
            <a href="/Admin/SubMenu?menuId=@ViewBag.menuId" class="btn btn-info" style="margin-left:2%">Back</a>
            @* <a href="/State/All" class="btn btn-info">Show all</a>*@
        </div>
    </div>

    <div class="row r">
        <div class="col-md-12">
            <h2>Add State</h2>
        </div>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="row r">
            <div class="col-md-12">
                <div class="alert alert-info">
                    @TempData["msg"]
                </div>
            </div>
        </div>
    }

    <div class="row r">
        <div class="col-md-12">
            <div class="form-group">
                State Name *
                @Html.TextBoxFor(a => a.StateName, new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.StateName)
                </span>
            </div>

            <div class="form-group">
                State Code *
                @Html.TextBoxFor(a => a.StateCode, new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(a => a.StateCode)
                </span>
            </div>
            
            <div class="form-group">
                <input type="submit" class="btn btn-info" value="Save" />
            </div>

        </div>
    </div>

</div>

}
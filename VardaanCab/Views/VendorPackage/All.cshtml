@model VardaanCab.Domain.ViewModels.VendorPackageVm
@{
    ViewBag.Title = "Vendor Packages";
    Layout = "~/Views/Shared/New_Master/_FinelAdminLayout.cshtml";
    var links = new VardaanCab.Repository.CommonRepository().GetNonMenuLinks();
    int sn = Model.SrNo;
}
<link href="/css/fixtable.css" rel="stylesheet" />
 
<style>




    thead tr,
    tfoot tr {
        background: hsl(220, 50%, 80%);
    }

    tbody tr:nth-child(even) {
        background: hsl(220, 50%, 95%);
    }

    th, td {
        border: 1px solid;
        padding: 0.5em;
        text-align: left;
        vertical-align: top;
        font-weight: normal;
    }

    .scrollable thead,
    .scrollable tfoot,
    .scrollable tbody,
    .scrollable th,
    .scrollable td {
        display: block;
        width: 100%;
    }

    .scrollable thead,
    .scrollable tfoot,
    .scrollable tbody {
        overflow-y: scroll;
    }

    .scrollable thead,
    .scrollable tfoot {
        -ms-overflow-style: none;
    }

        .scrollable thead::-webkit-scrollbar,
        .scrollable tfoot::-webkit-scrollbar {
            visibility: hidden;
        }

    .scrollable tbody {
        max-height: 20em;
        position: relative;
        -ms-overflow-style: -ms-autohiding-scrollbar;
    }

    .scrollable tr {
        display: flex;
    }

    .scrollable tbody th,
    .scrollable tbody td {
        border-top: none;
    }

    .scrollable th:not(:last-child),
    .scrollable td:not(:last-child) {
        border-right: none;
    }
</style>
<div class="pcoded-content">

    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="card bread">
                    <div class="card-body">
                        <h5>
                            Vendor Packages
                        </h5>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Package</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">
                                        View Vendor Packages
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <!-- Heading -->
                                    <h5>
                                        Vendor Packages
                                    </h5>

                                    <!-- Import and Export Section -->
                                    <div class="d-flex align-items-center">
                                        <button type="button" class="btn btn-info" id="btnExport"> <i class="fa fa-file-excel-o"></i></button>
                                        &nbsp;&nbsp;
                                        <a class="btn btn-info" href="/VendorPackage/Add?menuId=@ViewBag.menuId"><i class="fa fa-plus-square"></i>Add More</a>

                                    </div>
                                </div>
                                <div class="card-block">
                                    @using (Html.BeginForm())
                                    {
                                        <div class="row">
                                            <div class="col-md-4">
                                                <input type="text" placeholder="Search by Vehicle Model" class="form-control" name="term" />
                                            </div>
                                            <div class="col-md-8">
                                                <input type="submit" class="btn btn-primary" value="Find" />
                                                <a class="btn btn-primary" href="/VendorPackage/All?menuId=@ViewBag.menuId">Show all</a>
                                                @*<a class="btn btn-info" href="/VendorPackage/Add?menuId=@ViewBag.menuId">+ Add More</a>*@
                                            </div>
                                        </div>
                                    }
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-table" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th class="sticky-col first-col" nowrap>S.No.</th>
                                                    <th class="sticky-col second-col">Package Type</th>
                                                    <th class="sticky-col third-col">Booking Type</th>
                                                    <th>Vehicle</th>
                                                    <th>Fare</th>
                                                    <th>MinKm</th>
                                                    <th>MinHrs</th>
                                                    <th>ExtraPerHour</th>
                                                    <th>ExtraPerKm</th>
                                                    <th>NightCharges</th>
                                                    <th>Outstation TA/day</th>
                                                    <th>Created/Updated By</th>
                                                    <th>Create/Update Date</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Packages)
                                                {
                                                    <tr>
                                                        <td class="sticky-col first-col" nowrap>@(++sn)</td>
                                                        <td class="sticky-col second-col">@item.PackageTypeName</td>
                                                        <td class="sticky-col third-col">
                                                            @item.RentalType
                                                            @if (!string.IsNullOrEmpty(item.PickupLocation) && !string.IsNullOrEmpty(item.DropLocation))
                                                            {
                                                                <text>
                                                                    &nbsp; (@item.PickupLocation to @item.DropLocation)
                                                                </text>
                                                            }
                                                        </td>
                                                        <td>@item.ModelName</td>
                                                        <td>@item.Fare</td>
                                                        <td>@item.MinKm</td>
                                                        <td>@item.MinHrs</td>
                                                        <td>@item.ExtraPerHour</td>
                                                        <td>@item.ExtraPerKm</td>
                                                        <td>@item.NightCharges</td>
                                                        <td>@item.OutStationCharge</td>
                                                        <td>@item.UpdatedByUser</td>
                                                        <td>@item.UpdateDate.ToString("dd-MMM-yyyy")</td>
                                                        <td>
                                                            @if (links.Contains("Edit Vendor Package"))
                                                            {
                                                                <a href="/VendorPackage/Edit?Id=@item.Id" class="btn btn-info">Edit</a>

                                                                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id, menuId = ViewBag.menuId }, new { @class = "btn btn-info" })*@
                                                            }
                                                            @if (links.Contains("Delete Vendor Package"))
                                                            {
                                                                <span class="btn btn-danger" onclick="deleteRecord('/VendorPackage/Delete?id=@item.Id')">Delete</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</div>


                        <script src="/js/jquery2.0.3.min.js"></script>
                        <script>
                            function deleteRecord(url) {
                                if (window.confirm('do you want to delete?')) {
                                    $.get(url).then(function (r) {
                                        if (r == "ok") {
                                            var loc = window.location.href;
                                            window.location.href = loc;
                                        }
                                    }, function (e) {
                                        alert("Server error");
                                    })
                                }
                            }
                        </script>